<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLinearLayout"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/fragment_padding_top"
    tools:context=".MainMenuActivity">

    <LinearLayout
        android:background="@color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/main_menu_current_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/candal"
            android:text="@string/placeholder_string"
            android:textAlignment="center"
            android:textColor="#CFD8DC"
            android:textSize="20sp" />

        <LinearLayout
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/fragment_temperature_margin_top"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="viewEnd"
                android:layout_weight="6"
                android:id="@+id/main_menu_actual_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="#CFD8DC"
                android:textSize="90sp"
                android:gravity="end"
                android:text="@string/placeholder_float" />

            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_gravity="top"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:id="@+id/main_menu_actual_temperature_symbol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:textColor="#CFD8DC"
                android:textSize="13sp"
                android:gravity="start"
                android:text="@string/fragment_main_temp_symbol" />

            <LinearLayout
                android:paddingTop="@dimen/fragment_margin_top"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_height="match_parent">

                <TextView
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_max_temp" />

                <TextView
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:id="@+id/main_menu_max_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_float" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:fontFamily="@font/lemon"
                    android:text="@string/fragment_main_min_temp"
                    android:textColor="#CFD8DC"
                    android:textSize="12sp" />



                <TextView
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:id="@+id/main_menu_min_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_float" />

            </LinearLayout>

        </LinearLayout>




        <TextView
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/main_menu_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CFD8DC"
            android:fontFamily="@font/candal"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:text="@string/placeholder_string" />




        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/activity_vertical_margin"
            android:background="@color/transparent"
            android:weightSum="8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_pressure"/>

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/main_menu_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="12sp"
                    android:text="@string/placeholder_float" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_wetness" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/main_menu_current_wetness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="12sp"
                    android:text="@string/placeholder_float" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_wind" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/main_menu_current_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="12sp"
                    android:text="@string/placeholder_float" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_cloud" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/main_menu_current_clouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="12sp"
                    android:text="@string/placeholder_float" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:weightSum="2"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_sunrise"/>

                <ImageView
                    android:layout_margin="5dp"
                    android:src="@drawable/sunny_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/main_menu_morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/placeholder_time"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lemon"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/fragment_main_sunset"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:src="@drawable/moon_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/main_menu_evening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CFD8DC"
                    android:textSize="13sp"
                    android:text="@string/placeholder_time" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>