<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forecast_icon"
                android:layout_gravity="center"
                android:textColor="#005500"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="@string/stringplaceholder"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/forecast_current_temperature"
                    android:layout_gravity="start"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/stringplaceholder"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/forecast_max_temperature"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/stringplaceholder"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/forecast_min_temperature"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/stringplaceholder"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/forecast_wetness"
                    android:layout_gravity="start"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="26sp"
                    android:text="@string/stringplaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/forecast_wind"
                    android:layout_gravity="end"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="@string/stringplaceholder"
                    android:textSize="26sp"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/forecast_clouds"
                    android:layout_gravity="start"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="26sp"
                    android:text="@string/stringplaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/forecast_pressure"
                    android:layout_gravity="end"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="@string/stringplaceholder"
                    android:textSize="26sp"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>